<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dados">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorCustomBar">

        <EditText
            android:textColor="@color/colorCustomPrimary"
            android:textColorHint="@color/colorCustomPrimary"
            android:textSize="22dp"
            android:drawableRight="@drawable/ic_search"
            android:hint="Campo de texto"
            android:layout_width="400dp"
            android:layout_height="75dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorCustomPrimary"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda"
                />

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID da Imagem: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda"
                android:layout_marginBottom="35dp"
                />

            <Button
                android:background="@color/colorCustomBar"
                android:textColor="@color/colorCustomText"
                android:textSize="20sp"
                android:text="BAIXAR"
                android:layout_width="150dp"
                android:layout_height="50dp" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dono: "
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição: "
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="12dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Texto que serve para ocupar este campo de informação, puramente para exemplificar o seu uso prático."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:layout_marginBottom="1dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <View
            android:background="@color/colorCustomPrimary"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:background="@color/colorCustomPrimary"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:background="@color/colorCustomPrimary"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:background="@color/colorCustomPrimary"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:layout_marginLeft="15dp"
            android:background="@color/colorCustomPrimary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCustomBar"></LinearLayout>


</LinearLayout>